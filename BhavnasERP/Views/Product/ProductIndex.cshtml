        @*Modal content*@
        <div class="modal-content">

            <div class="modal-body">
                <h5 class="card-title"> Product </h5>
                <form class="row g-3">
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtProductName" placeholder=" Product Name">
                            <label for="floatingEmail"> Product Name</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtAmount" placeholder="Amount">
                            <label for="floatingEmail"> Amount</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtSize" placeholder="Weight">
                            <label for="floatingEmail">Weight</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <textarea type="text" class="form-control" id="txtDescription" placeholder="Description"></textarea>
                            <label for="floatingName">Description</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtUnit" placeholder="Unit">
                            <label for="floatingEmail">Unit</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtMFGDate" placeholder=" MFGDate">
                            <label for="floatingEmail"> MFG Date</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtExpiryDate" placeholder=" ExpiryDate">
                            <label for="floatingEmail"> Expiry Date</label>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <input type="checkbox" id="txtIsActive" placeholder="Resolved By">
                        <label for="floatingResolved By">Is Available</label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" onclick="SaveProduct()">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                        <button type="button" class="btn btn-success" data-bs-dismiss="modal">Close</button>

                    </div>
                </form>
            </div>
